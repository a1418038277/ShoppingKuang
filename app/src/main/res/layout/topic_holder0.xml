<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/topic_img"
        android:layout_width="@dimen/dp_340"
        android:layout_centerHorizontal="true"
        android:layout_height="@dimen/dp_170"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher" />
    <TextView
        android:id="@+id/topic_title"
        android:layout_below="@id/topic_img"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:text="关爱他成长"
        android:textSize="@dimen/dp_17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/topic_subtitle"
        android:layout_below="@id/topic_title"
        android:layout_marginLeft="@dimen/dp_10"
        android:text="专业运动品牌"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/topic_price"
        android:layout_toRightOf="@id/topic_title"
        android:layout_alignBottom="@id/topic_title"
        android:textColor="#f00"
        android:text="￥0元起"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
</RelativeLayout>