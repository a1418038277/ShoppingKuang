<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/img_car"
        android:src="@mipmap/ic_launcher"
        android:layout_margin="@dimen/dp_10"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100"
        />
    <TextView
        android:id="@+id/txt_price"
        android:text="价格："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_car"
        android:textSize="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_35"
        />
    <TextView
        android:id="@+id/txt_car_price"
        android:text="￥559"
        android:layout_toRightOf="@id/txt_price"
        android:layout_alignBottom="@id/txt_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt_guige"
        android:text="请选择规格数量"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_car_price"
        android:layout_alignLeft="@id/txt_price"
        android:layout_marginTop="@dimen/dp_5"
        />
    <TextView
        android:id="@+id/txt_car"
        android:layout_alignParentRight="true"
        android:text="X"
        android:textSize="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/txt_num"
        android:text="数量"
        android:layout_below="@id/img_car"
        android:layout_alignLeft="@id/img_car"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_below="@id/txt_num"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/txt_reduce"
            android:layout_width="@dimen/dp_30"
            android:layout_height="match_parent"
            android:textSize="@dimen/sp_14"
            app:layout_constraintLeft_toLeftOf="parent"
            android:gravity="center"
            android:background="@drawable/shape_txt_border"
            android:text="-"
            android:paddingVertical="@dimen/dp_7"/>
        <TextView
            android:id="@+id/txt_number"
            android:layout_width="@dimen/dp_40"
            android:layout_height="match_parent"
            android:textSize="@dimen/sp_14"
            app:layout_constraintLeft_toRightOf="@id/txt_reduce"
            android:gravity="center"
            android:background="@drawable/shape_txt_border"
            android:text="1"
            android:paddingVertical="@dimen/dp_7"/>
        <TextView
            android:id="@+id/txt_add"
            android:layout_width="@dimen/dp_30"
            android:layout_height="match_parent"
            android:textSize="@dimen/sp_14"
            app:layout_constraintLeft_toRightOf="@id/txt_number"
            android:gravity="center"
            android:background="@drawable/shape_txt_border"
            android:text="+"
            android:paddingVertical="@dimen/dp_7"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>