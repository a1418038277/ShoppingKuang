<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginBottom="5dp"
    android:layout_height="@dimen/dp_200">


    <ImageView
        android:id="@+id/branddata_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        android:scaleType="centerCrop"
        android:src="@color/colorAccent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/brnad_data_name"
            android:text="MUJI制造商"
            android:textStyle="bold"
            android:textSize="@dimen/dp_20"
            android:textColor="@color/cardview_light_background"
            android:paddingRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/line"
            android:text="|"
            android:textSize="@dimen/dp_20"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:textColor="@color/cardview_light_background"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/brnad_data_name"
            android:layout_alignBottom="@id/brnad_data_name"
            />
        <TextView
            android:id="@+id/brand_data_price"
            android:text="29元起"
            android:textSize="@dimen/dp_20"
            android:textStyle="bold"
            android:paddingLeft="5dp"
            android:textColor="@color/cardview_light_background"
            android:layout_toRightOf="@id/line"
            android:layout_alignBottom="@id/line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>
</RelativeLayout>